@{
    ViewData["Title"] = "Alumnos";
}
<style>
    .cuadroRegistrarAlumno {
        display: none;
    }

    #horario-container {
        margin-top: 20px;
        width: 100%;
        overflow-x: auto; 
    }

    table {
        width: 100%; /* asegúrate de que la tabla ocupe el ancho del contenedor de desplazamiento */
        border-collapse: collapse;
        min-width: 600px; 
    }

    @* table,
    th,
    td {
        border: 1px solid black;
    } *@

    th, td {
    min-width: 200px; /* Ancho mínimo para las celdas y cabeceras */
}

    @* th {
        background-color: #f2f2f2;
    } *@
    .selected {
